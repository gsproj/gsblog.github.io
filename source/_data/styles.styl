// 修改选中文字底色
/* webkit, opera, IE9 */
::selection { 
    background: #00c4b6;
    color: #f7f7f7; 
}
/* firefox */
::-moz-selection { 
    background: #00c4b6;
    color: #f7f7f7;    
}


// 短Code样式定义
code {
    color: #c7254e; //文字顏色
    background: #f9f2f4; //底色
    margin: 2px;
    border: 1px solid #d6d6d6;
}

